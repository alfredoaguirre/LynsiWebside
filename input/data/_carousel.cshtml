@using System.Text;
@using System.IO;
@using YamlDotNet.RepresentationModel;
@using YamlDotNet.Serialization;


@{

 using (var reader = new StreamReader(@"input\data\carousel.yaml")) {
  var yaml = new YamlStream();
  yaml.Load(reader);

  int i = 0;
  foreach(var doc in yaml.Documents)
  {
    <div class="slider-item js-fullheight">
        <div class="overlay"></div>
        <div class="container-fluid p-0">
            <div class="row d-md-flex no-gutters slider-text js-fullheight align-items-center justify-content-end" data-scrollax-parent="true">
            <div class="one-third order-md-last img js-fullheight" style="background-image:url(images/@(doc.get("background")));">
                <h3 class="vr" style="background-image: url(images/divider.jpg")> @doc.get("Divider")</h3>
            </div>
                <div class="one-forth d-flex js-fullheight align-items-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                <div class="text">
                    <span class="subheading">@Html.Raw(@doc.get("Heading"))</span>
                    <h1 class="mb-4 mt-3">@doc.get("Subheading")</h1>
                    <p>@doc.get("Paragraph")</p>
                    <p><a href="#" class="btn btn-primary px-5 py-3 mt-3">@doc.get("LinkText")</a></p>
                </div>
                </div>
            </div>
        </div>
    </div>
 }
 }
 
}